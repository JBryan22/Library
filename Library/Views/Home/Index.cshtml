@{
  Layout = "_Layout";
}

<body id="index">
  <h1 class="header">Welcome to the King County Library System</h1>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Search Catalog</h2>

        <form action="/" method="post">
          <div id="custom-search-input">
            <div class="input-group col-md-12">
              <input type="text" name="searchInput" class="form-control input-lg" placeholder="Search by title or author" />
              <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </span>
            </div>
          </div>
        </form>

      </div>
    </div>

    <a href="/catalog/list"><button type="button" class="btn btn-default view-catalog">View Catalog</button></a>
    <a href="/checkout"><button type="button" class="btn btn-default view-catalog">Checkout</button></a>

  </div>

</body>
